# 构建阶段
FROM node:25-alpine AS web-builder

WORKDIR /web

COPY web/package*.json ./
RUN npm install

COPY web/ .
RUN npm run build

FROM golang:1.25.6-alpine AS builder

WORKDIR /app

RUN sed -i 's/dl-cdn.alpinelinux.org/mirrors.aliyun.com/g' /etc/apk/repositories && apk add --no-cache git

COPY go.mod go.sum ./
RUN go env -w GOPROXY=https://goproxy.cn,direct && go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o apiwong ./cmd/server

FROM alpine:latest

RUN sed -i 's/dl-cdn.alpinelinux.org/mirrors.aliyun.com/g' /etc/apk/repositories && apk --no-cache add ca-certificates tzdata

ENV TZ=Asia/Shanghai

WORKDIR /root/

COPY --from=builder /app/apiwong .
COPY --from=builder /app/configs ./configs
COPY --from=web-builder /web/dist ./web/dist

EXPOSE 8080

CMD ["./apiwong"]
